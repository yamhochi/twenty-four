---
import { menuLinks, siteConfig } from "@/site-config";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4 pt-20 text-center align-top text-gray-500 sm:flex-row sm:justify-between sm:text-xs"
>
	<div class="me-0 sm:me-4">
		Copyright &copy; {year}{" "}
		{siteConfig.author} â€¢ Built with | <a
		target="_blank" 
		rel="noopener noreferrer"
		href="https://astro.build/"
		aria-label="external link">Astro</a> | 
		<a
		target="_blank" 
		rel="noopener noreferrer"
		href="https://tailwindcss.com/"
		aria-label="external link">Tailwind</a> | 
		<a
		target="_blank" 
		rel="noopener noreferrer"
		href="https://www.typescriptlang.org/"
		aria-label="external link">Typescript</a> | 
		<a
		target="_blank"
		rel="noopener noreferrer"
		href="https://vercel.com/"
		aria-label="external link">Vercel</a> | 
	</div>
	<nav
		aria-label="More on this site"
		class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
	>
		{
			menuLinks.map((link) => (
				<a
					href={link.path}
					class="px-4 py-2 sm:px-2 sm:py-0 sm:hover:text-textColor sm:hover:underline"
				>
					{link.title}
				</a>
			))
		}
	</nav>
</footer>
